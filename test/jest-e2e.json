{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": "tsconfig.json",
      "diagnostics": true
    }]
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!uuid)/"
  ],
  "setupFiles": ["<rootDir>/setup-e2e.ts"],
  "testTimeout": 30000
}
